<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

<TextView
    android:id="@+id/tv_Obsrv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="(Observer) Observer !" />

    <TextView
        android:id="@+id/text01_Obsrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="text01"/>

    <TextView
        android:id="@+id/text02_Obsrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="text02"/>

    <TextView
        android:id="@+id/textView_Obsrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Text 1"/>

    <TextView
        android:id="@+id/textView2_Obsrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Text 2"/>

    <Button
    android:id="@+id/button1_Obsrv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:textSize="30sp"
    android:text="Button1"/>

    <Button
        android:id="@+id/button2_Obsrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Button2"/>

</LinearLayout>