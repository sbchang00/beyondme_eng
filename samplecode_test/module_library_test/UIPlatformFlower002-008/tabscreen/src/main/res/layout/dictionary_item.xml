<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dictionary_id_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dictionary_english_item"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:padding="5dp"
        android:textAlignment="center"
        android:text="123"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dictionary_english_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dictionary_id_item"
        app:layout_constraintRight_toLeftOf="@id/dictionary_korean_item"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="english"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/dictionary_korean_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dictionary_english_item"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="korean"
        android:textStyle="bold" />

</androidx.constraintlayout.widget.ConstraintLayout>